RUN ./vcpkg integrate install

# object storage prerequisites
RUN ./vcpkg install cryptopp

RUN  ./vcpkg install azure-storage-cpp

# since we upgraded from Orthanc Framework 1.7.3 to 1.9.1
RUN ./vcpkg install boost
